<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:orientation="vertical"
    tools:context="org.mobwell.academy.shopapp.screens.activities.AvLogin">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shopapp_login_user"
        android:gravity="center_horizontal"
        android:hint="@string/username_hint"
        android:layout_marginTop="@dimen/textbox_margin"
        android:layout_marginBottom="@dimen/textbox_margin" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shopapp_login_pass"
        android:gravity="center_horizontal"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:layout_marginBottom="@dimen/textbox_margin"
        android:layout_marginTop="@dimen/textbox_margin" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_login"
            android:id="@+id/shopapp_login_ent"
            android:onClick="onClickLogin"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/bt_register"
            android:id="@+id/shopapp_login_reg"
            android:onClick="onClickRegister"
            android:layout_weight="1"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

</LinearLayout>
